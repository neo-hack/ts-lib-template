{
  "name": "@aiou/ts-lib-template",
  "version": "0.5.2",
  "description": "a starter for typescript lib",
  "keywords": [
    "typescript",
    "lib",
    "template",
    "aiou"
  ],
  "license": "MIT",
  "homepage": "https://github.com/neo-hack/ts-lib-template#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neo-hack/ts-lib-template.git"
  },
  "bugs": {
    "url": "https://github.com/neo-hack/ts-lib-template/issues",
    "email": "jiangweixian1994@gmail.com"
  },
  "author": {
    "name": "JW",
    "email": "jiangweixian1994@gmail.com",
    "url": "https://twitter.com/jiangweixian"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "rimraf lib && ttsc",
    "dev": "rimraf lib && ttsc -w",
    "test": "pnpm run build && jest",
    "pretest": "pnpm run build",
    "ci:publish": "pnpm run build && pnpx changeset publish",
    "ci:version": "pnpx changeset version",
    "ci:snapshot": "pnpx changeset version --snapshot beta",
    "ci:prerelease": "pnpm run build && pnpx changeset publish --tag beta",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/**/*.{js,ts,tsx,vue,json}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@aiou/eslint-config": "^0.4.0",
    "@changesets/cli": "^2.16.0",
    "@types/jest": "26.0.23",
    "@types/node": "^17.0.8",
    "cz-emoji": "^1.3.1",
    "eslint": "^8.6.0",
    "husky": "^7.0.0",
    "jest": "27.0.6",
    "lint-staged": "^11.0.1",
    "prettier": "2.3.2",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.3",
    "ts-node": "10.0.0",
    "tsc-progress": "^1.0.2",
    "tslib": "2.3.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.3.5",
    "typescript-transform-paths": "^3.0.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  }
}
